<h2>Book your move!</h2>

<%= form_for @booking do |f| %>

  <%= render 'shared/forms_errors', :f => f %>
  <div class="field">
    <%= f.label :move_date %>
    <br>
    <%= f.text_field :starts_at, placeholder: "When would you like to move?", :value => (@booking.starts_at.blank? ? '' : @booking.starts_at.strftime('%m/%d/%Y')), id: "datepicker" %>
  <br>
  <div class="field">
    <%= f.fields_for :origin do |address_fields| %>
      <%= address_fields.label :current_address %>
      <br>
      <%= address_fields.text_field :street_address, placeholder: "eg. 374 Stephen St.", class: "input-block-level" %>
      <br>
      <%= address_fields.label :current_city %>
      <br>
      <%= address_fields.text_field :city, placeholder: "London", class: "input-block-level" %>
      <br>
      <%= address_fields.label :postal_code %>
      <br>
      <%= address_fields.text_field :postal_code, placeholder: "N6K 3V8", class: "input-block-level" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.fields_for :destination do |address_fields| %>
      <%= address_fields.label :destination_address %>
      <br>
      <%= address_fields.text_field :street_address, placeholder: "eg. 30 Grand Trunk Cres.", class: "input-block-level" %>
      <br>
      <%= address_fields.label :destination_city %>
      <br>
      <%= address_fields.text_field :city, placeholder: "Toronto", class: "input-block-level" %>
      <br>
      <%= address_fields.label :postal_code %>
      <br>
      <%= address_fields.text_field :postal_code, placeholder: "M5V 9T7", class: "input-block-level" %>
    <% end %>
  </div>
  <div class="form-actions">
    <%= f.submit 'Book Now!', :class => 'btn' %>
  </div>

<% end %>